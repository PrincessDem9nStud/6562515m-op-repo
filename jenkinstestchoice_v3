pipeline {
  agent any

  parameters {
    choice(
      name: 'ACTION_TYPE',
      choices: ['roll', 'release'],
      description: 'Choose the action type'
    )
    choice(
      name: 'NEXT_STEP',
      choices: ['proceed', 'go back'],
      description: 'Choose whether to proceed or go back'
    )
  }

  stages {
    stage('Step 1: Select Action') {
      steps {
        echo "User selected action: ${params.ACTION_TYPE}"
      }
    }

    stage('Step 2: Hello World') {
      steps {
        echo "hello world"
      }
    }

    stage('Step 3: Navigation Choice') {
      steps {
        echo "User selected next step: ${params.NEXT_STEP}"
      }
    }
  }
}

